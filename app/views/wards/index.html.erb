  <%= link_to 'Add new Ward', new_ward_path, method: :get if current_employee.employee_type == 'admin' %>

<div class="d-flex justify-content-center">
<table>
  <thead>
    <tr>
      <th class="border-2">Ward ID</th>
      <th class="border-2">Ward Name</th>
      <th class="border-2">Number of Patients</th>

    </tr>
  </thead>
  <tbody>
    <% @wards.each do |ward|%>
        <tr>
          <td class="border-1"><%= ward.id %></td>
          <td class="border-1"><%= ward.name %></td>
          <td class="border-1"><%= ward.patients.count%></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>


