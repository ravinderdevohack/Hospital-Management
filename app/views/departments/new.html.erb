<div class="d-flex justify-content-center">
  <%= form_with model: @department, url: @action == 'edit' ? department_path : departments_path, method: @action == 'edit' ? :patch : :post, id:'myDepartment' do |form| %>
    <%= form.label :name, "Department Name"%><br>
    <%= form.text_field :name, class:'input form-control'%><br>

    <input type="submit" value="submit", id="submit-btn"></input>
  <% end %>
</div>


